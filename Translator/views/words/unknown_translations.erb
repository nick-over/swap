<div class="grid-x grid-padding-x">
  <div class="cell">
    <h3>Список слов без перевода</h3>
    <a href="<%= menu_path %>" class="button hollow secondary">Назад</a>
    <ol>
      <% if @words.size == 0 %>
        <p class="callout warning">
          Не было найдено слов без перевода
        </p>
      <% else %>
        <% @words.each do |word| %>
          <li>
            <a href="<%= path(word, 'new_meaning') %>"><%= word.name %></a>
          </li>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>